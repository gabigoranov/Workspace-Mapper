<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WorkflowManager.App"
             xmlns:local="using:WorkflowManager"
             RequestedThemeVariant="Default">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Active theme -->
                <ResourceInclude Source="avares://WorkflowManager/Styles/Themes/Light.axaml"/>

                <!-- Non-theme tokens -->
                <!--<ResourceInclude Source="avares://WorkflowManager/Styles/Tokens/Spacing.axaml"/>
                <ResourceInclude Source="avares://WorkflowManager/Styles/Tokens/Typography.axaml"/>
                <ResourceInclude Source="avares://WorkflowManager/Styles/Tokens/Radius.axaml"/>-->

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/app-icon.png" 
                      ToolTipText="Workflow Manager"
                      Clicked="ShowApplication">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Exit" Click="ExitApplication"/>
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
             
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        
        <StyleInclude Source="avares://WorkflowManager/Icons.axaml"></StyleInclude>
    </Application.Styles>
</Application>