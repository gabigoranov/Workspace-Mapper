<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WorkflowManager.App"
             xmlns:local="using:WorkflowManager"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
    
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="AppBackground" Color="#1e1e1e"/>
                    <SolidColorBrush x:Key="CardBackground" Color="#2a2a2a"/>
                    <SolidColorBrush x:Key="PrimaryText" Color="#fefefe"/>
                    <SolidColorBrush x:Key="SecondaryText" Color="#999999"/>
                    <SolidColorBrush x:Key="AccentColor" Color="#cfcfcf"/>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="AppBackground" Color="#f5f5f5"/>
                    <SolidColorBrush x:Key="CardBackground" Color="#ffffff"/>
                    <SolidColorBrush x:Key="PrimaryText" Color="#1a1a1a"/>
                    <SolidColorBrush x:Key="SecondaryText" Color="#666666"/>
                    <SolidColorBrush x:Key="AccentColor" Color="#5c5c5c"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
             
    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/app-icon.png" 
                      ToolTipText="Workflow Manager"
                      Clicked="ShowApplication">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Exit" Click="ExitApplication"/>
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
             
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://WorkflowManager/Icons.axaml"></StyleInclude>
    </Application.Styles>
</Application>