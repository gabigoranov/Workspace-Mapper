<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:WorkflowManager.ViewModels"
             x:Class="WorkflowManager.Views.UpdateWorkflowView"
             x:DataType="viewModels:UpdateWorkflowViewModel">

    <ScrollViewer Background="{DynamicResource AppBackground}">
        <StackPanel Margin="20" Spacing="20" MaxWidth="600">
            <TextBlock Text="Update Workflow"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryText}"/>

            <StackPanel Spacing="8">
                <TextBlock Text="Workflow Information"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AccentColor}"/>
                <Border Padding="15"
                        BorderBrush="{DynamicResource SecondaryText}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Background="{DynamicResource CardBackground}">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Workflow Title"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryText}"/>
                        <TextBox Text="{Binding WorkflowTitle}"
                                 Watermark="e.g. Daily Data Backup"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock Text="Add New Process"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AccentColor}"/>
                <Border Padding="15"
                        BorderBrush="{DynamicResource AccentColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Background="{DynamicResource CardBackground}">
                    <StackPanel Spacing="10">
                        <TextBox Text="{Binding ProcessTitle}" Watermark="Process Name (e.g. Sync Files)"/>
                        <TextBox Text="{Binding ProcessDirectory}" Watermark="Directory Path"/>
                        <TextBox Text="{Binding ProcessCommand}" Watermark="Command / Script"/>

                        <Button Content="Add Process"
                                Command="{Binding AddProcessCommand}"
                                HorizontalAlignment="Right"
                                HotKey="Enter"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock Text="Current Processes Queue"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryText}"/>
                <ItemsControl ItemsSource="{Binding WorkflowProcesses}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBackground}"
                                    Margin="0,0,0,5"
                                    Padding="12"
                                    CornerRadius="4">
                                <Grid ColumnDefinitions="Auto, *, Auto">
                                    <PathIcon Data="{DynamicResource ChevronRightRegular}"
                                              Width="12"
                                              Margin="0,0,10,0"
                                              Foreground="{DynamicResource SecondaryText}"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Title}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryText}"/>
                                        <TextBlock Text="{Binding Command}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource SecondaryText}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <Separator Margin="0,10"
                       Background="{DynamicResource SecondaryText}"
                       Opacity="0.3"/>

            <Button Content="Save Changes"
                    Command="{Binding UpdateWorkflowCommand}"
                    Background="{DynamicResource AccentColor}"
                    Foreground="White"
                    Height="45"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
