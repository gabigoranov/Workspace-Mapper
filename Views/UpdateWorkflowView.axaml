<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:WorkflowManager.ViewModels"
             x:Class="WorkflowManager.Views.UpdateWorkflowView"
             x:DataType="viewModels:UpdateWorkflowViewModel">

    <ScrollViewer Background="{DynamicResource AppBackground}">
        <StackPanel Margin="20" Spacing="20" MaxWidth="600">
            <TextBlock Text="Update Workflow"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryText}"/>

            <StackPanel Spacing="8">
                <TextBlock Text="Workflow Information"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AccentColor}"/>
                <Border Padding="15"
                        BorderBrush="{DynamicResource SecondaryText}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Background="{DynamicResource CardBackground}">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Workflow Title"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryText}"/>
                        <TextBox Text="{Binding WorkflowTitle}"
                                 Watermark="e.g. Daily Data Backup"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock Text="Add New Process" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource AccentColor}"/>
                <Border Padding="15" 
                        BorderBrush="{DynamicResource AccentColor}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Background="{DynamicResource CardBackground}">
                    <StackPanel Spacing="10">
                        <TextBox Text="{Binding CurrentProcessVm.Title}" Watermark="Process Name (e.g. Sync Files)" />
                        <TextBox Text="{Binding CurrentProcessVm.Directory}" Watermark="Directory Path" />
                        <Button Content="Choose Folder"
                                Command="{Binding ChooseProcessDirectoryCommand}"
                                CommandParameter="{Binding .}" />
                        
                        <Button Content="Choose File"
                                Command="{Binding ChooseProcessDirectoryCommand}"
                                CommandParameter="{Binding .}" />
                        
                        <Button Content="Choose Website"
                                Command="{Binding ChooseProcessDirectoryCommand}"
                                CommandParameter="{Binding .}" />

                        <TextBox Text="{Binding CurrentProcessVm.Command}" Watermark="Command / Script" />
                        
                        <Button IsVisible="{Binding !CurrentProcessVm.IsEditing}" 
                                Content="Add Process"
                                Command="{Binding AddOrEditProcessCommand}"
                                HorizontalAlignment="Right"
                                HotKey="Enter"/>
                        
                        <Button IsVisible="{Binding CurrentProcessVm.IsEditing}" 
                                Content="Edit Process"
                                Command="{Binding AddOrEditProcessCommand}"
                                HorizontalAlignment="Right"
                                HotKey="Enter"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock Text="Current Processes Queue"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryText}"/>
                <ItemsControl ItemsSource="{Binding WorkflowProcesses}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBackground}"
                                    Margin="0,0,0,5"
                                    Padding="12"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" /> <!-- Text takes remaining space -->
                                        <ColumnDefinition Width="Auto" /> <!-- Buttons take their own width -->
                                    </Grid.ColumnDefinitions>

                                    <!-- Texts -->
                                    <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="2">
                                        <TextBlock Text="{Binding Title}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryText}"/>
                                        <TextBlock Text="{Binding Command}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource SecondaryText}"/>
                                    </StackPanel>

                                    <!-- Buttons -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                        <!-- Edit Button -->
                                        <Button x:CompileBindings="False"
                                                Command="{Binding DataContext.StartEditProcessCommand,
                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="8">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Edit"/>
                                                <PathIcon Width="15"
                                                          Height="15"
                                                          Data="{DynamicResource DocumentEditRegular}"
                                                          Foreground="{Binding $parent[Button].Foreground}"/>
                                            </StackPanel>
                                        </Button>

                                        <!-- Delete Button -->
                                        <Button x:CompileBindings="False"
                                                Command="{Binding DataContext.DeleteProcessCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="8"
                                                VerticalAlignment="Stretch">
                                            <PathIcon Width="15"
                                                      Height="15"
                                                      Data="{DynamicResource DeleteRegular}"
                                                      Foreground="{Binding $parent[Button].Foreground}"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <Separator Margin="0,10"
                       Background="{DynamicResource SecondaryText}"
                       Opacity="0.3"/>

            <Button Content="Save Changes"
                    Command="{Binding UpdateWorkflowCommand}"
                    Background="{DynamicResource AccentColor}"
                    Height="45"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Foreground="White"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
