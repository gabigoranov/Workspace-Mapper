<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WorkflowManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="WorkflowManager.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Width="900"
        Height="550"
        Background="#1e1e1e"
        Foreground="#fefefe"
        FontSize="16"
        CanResize="False"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="0"
        SystemDecorations="None">

    <Design.DataContext>
        <vm:MainWindowViewModel d:IsDesignTimeCreatable="True"/>
    </Design.DataContext>

    <!-- ROOT LAYOUT -->
    <Grid RowDefinitions="Auto,*">

        <!-- TITLE BAR -->
        <Border Background="CornflowerBlue"
                CornerRadius="10"
                Margin="6"
                Padding="8"
                PointerPressed="DragWindow">

            <Grid ColumnDefinitions="*,Auto,Auto">
                <TextBlock Text="Workflow Manager"
                           FontSize="22"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="Min"
                        Margin="6,0"
                        Click="MinimizeWindow"/>

                <Button Grid.Column="2"
                        Content="Close"
                        Click="CloseWindow"/>
            </Grid>
        </Border>

        <!-- MAIN AREA -->
        <Grid Grid.Row="1"
              ColumnDefinitions="220,*"
              Margin="6">

            <!-- SIDEBAR -->
            <Border Background="#2a2a2a"
                    CornerRadius="12"
                    Padding="12">

                <StackPanel Spacing="10">

                    <TextBlock Text="Navigation"
                               FontSize="18"
                               Opacity="0.7"
                               Margin="0,0,0,8"/>

                    <Button Content="Home"
                            Height="34"
                            HorizontalAlignment="Stretch"
                            CornerRadius="8"
                            Command="{Binding Sidebar.GoHomeCommand}"/>

                    <Button Content="Create Workflow"
                            Height="34"
                            HorizontalAlignment="Stretch"
                            CornerRadius="8"
                            Command="{Binding Sidebar.GoCreateWorkflowCommand}"/>
                </StackPanel>
            </Border>

            <!-- PAGE CONTENT -->
            <Border Grid.Column="1"
                    Background="#1a1a1a"
                    CornerRadius="12"
                    Margin="12,0,0,0"
                    Padding="12">

                <ContentControl Content="{Binding CurrentViewModel}" />
            </Border>

        </Grid>

    </Grid>
</Window>
