<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WorkflowManager.ViewModels"
        Icon="/Assets/app-icon.png"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="WorkflowManager.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="FlowState"
        Width="1280"
        Height="800"
        Background="{DynamicResource AppBackground}"
        Foreground="{DynamicResource PrimaryText}"
        FontSize="16"
        CanResize="False"   
        RequestedThemeVariant="Light"
        xmlns:views="using:WorkflowManager.Views">

    <!-- ROOT LAYOUT -->
    <Grid ColumnDefinitions="300,*">

        <!-- SIDEBAR -->
        <views:Sidebar
            DataContext="{Binding Sidebar}"
            IsStartupApp="{Binding IsStartupApp}"/>

        <!-- PAGE CONTENT -->   
        <Border Grid.Column="1"
                Background="{DynamicResource Color.Background}"
                CornerRadius="{DynamicResource Border.Radius.Sm}">

            <ContentControl Content="{Binding CurrentViewModel}" />
        </Border>
    </Grid>
</Window>
