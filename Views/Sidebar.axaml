<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WorkflowManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WorkflowManager.Views.Sidebar"
             x:DataType="vm:SidebarViewModel">
    <UserControl.Styles>
        <Style Selector="Button.SidebarItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource Color.Text.Primary}" />
            <Setter Property="CornerRadius" Value="{DynamicResource Border.Radius.Md}"/>
            <Setter Property="Padding" Value="{DynamicResource Spacing.All.Lg}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style Selector="Button.SidebarItem:pointerover">
            <Setter Property="Background" Value="{DynamicResource Color.Background.Subtle}" />
        </Style>
    </UserControl.Styles>    
    
    <Border
        Background="{DynamicResource Color.Card}"
        Padding="{DynamicResource Spacing.All.Lg}"
        BorderBrush="{DynamicResource Color.Border}"
        BorderThickness="{DynamicResource Border.Thin.Right}"
        VerticalAlignment="Stretch">

        <Grid RowDefinitions="Auto,Auto,*,Auto">

            <!-- APP HEADER -->
            <StackPanel Orientation="Horizontal"
                        Spacing="{DynamicResource Spacing.Lg}"
                        Margin="{DynamicResource Spacing.Bottom.3Xl}">

                <Border Width="50"
                        Height="50"
                        CornerRadius="{DynamicResource Border.Radius.Sm}"
                        Background="{DynamicResource Color.Primary}">
                    <PathIcon Data="{DynamicResource AppIcon}"
                              Foreground="{DynamicResource Color.Text.OnAccent}"
                              Width="25"
                              Height="25"
                              Margin="{DynamicResource Spacing.Left.Xs}"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                </Border>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="FlowState"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource Color.Text.Primary}"/>
                    
                    <TextBlock Text="LOCAL PRO"
                               FontSize="12"
                               LetterSpacing="2"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource Color.Text.Secondary}"/>
                </StackPanel>
            </StackPanel>

            <!-- NAVIGATION -->
            <StackPanel Grid.Row="1"
                        Spacing="{DynamicResource Spacing.Xs}">

                <!-- Selected item -->
                <Button Classes="SidebarItem"
                        Background="{DynamicResource Color.Background}"
                        HorizontalAlignment="Stretch"> 
                    <StackPanel Orientation="Horizontal" Spacing="{DynamicResource Spacing.Lg}">
                        <PathIcon Data="{DynamicResource HomeRegular}"
                                  Width="18"
                                  Height="18"
                                  Foreground="{DynamicResource Color.Primary}"/>
                        <TextBlock Text="Home"
                                   Foreground="{DynamicResource Color.Primary}"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Button>

                <!-- Normal items -->
                <Button Classes="SidebarItem"
                        Command="{Binding GoHomeCommand}"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="{DynamicResource Spacing.Lg}">
                        <PathIcon Data="{DynamicResource GridRegular}"
                                  Width="18"
                                  Height="18"/>
                        <TextBlock Text="Library"/>
                    </StackPanel>
                </Button>

                <Button Classes="SidebarItem"
                        Command="{Binding GoHomeCommand}"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="{DynamicResource Spacing.Lg}">
                        <PathIcon Data="{DynamicResource HistoryRegular}"
                                  Width="18"
                                  Height="18"/>
                        <TextBlock Text="History"/>
                    </StackPanel>
                </Button>

                <Separator Margin="{DynamicResource Spacing.Bottom.Sm}" Foreground="{DynamicResource Color.Border}" Opacity="0.3"/>

                <Button Classes="SidebarItem"
                        Command="{Binding GoHomeCommand}"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="{DynamicResource Spacing.Lg}">
                        <PathIcon Data="{DynamicResource SettingsRegular}"
                                  Width="18"
                                  Height="18"/>
                        <TextBlock Text="Settings"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
