<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WorkflowManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WorkflowManager.Views.Sidebar"
             x:DataType="vm:SidebarViewModel">
    <UserControl.Styles>
        <Style Selector="Button.SidebarItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}" />
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="14,16"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style Selector="Button.SidebarItem:pointerover">
            <Setter Property="Background" Value="{DynamicResource AppBackgroundLight}" />
        </Style>
    </UserControl.Styles>    
    
    <Border
        Background="{DynamicResource CardBackground}"
        CornerRadius="16, 0, 0, 16"
        Padding="16"
        BorderBrush="{DynamicResource Border}"
        BorderThickness="0,0,1,0"
        VerticalAlignment="Stretch">

        <Grid RowDefinitions="Auto,Auto,*,Auto">

            <!-- APP HEADER -->
            <StackPanel Orientation="Horizontal"
                        Spacing="12"
                        Margin="0,10,0,44">

                <Border Width="50"
                        Height="50"
                        CornerRadius="14"
                        Background="{DynamicResource AccentColor}">
                    <PathIcon Data="{DynamicResource AppIcon}"
                              Foreground="White"
                              Width="25"
                              Height="25"
                              Margin="6, 0, 0, 0"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                </Border>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="FlowState"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryText}"/>
                    
                    <TextBlock Text="LOCAL PRO"
                               FontSize="12"
                               LetterSpacing="2"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryText}"/>
                </StackPanel>
            </StackPanel>

            <!-- NAVIGATION -->
            <StackPanel Grid.Row="1"
                        Spacing="6">

                <!-- Selected item -->
                <Button Classes="SidebarItem"
                        Background="{DynamicResource AppBackground}"
                        HorizontalAlignment="Stretch"> 
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <PathIcon Data="{DynamicResource HomeRegular}"
                                  Width="18"
                                  Height="18"
                                  Foreground="{DynamicResource AccentColor}"/>
                        <TextBlock Text="Home"
                                   Foreground="{DynamicResource AccentColor}"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Button>

                <!-- Normal items -->
                <Button Classes="SidebarItem"
                        Command="{Binding GoHomeCommand}"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <PathIcon Data="{DynamicResource GridRegular}"
                                  Width="18"
                                  Height="18"/>
                        <TextBlock Text="Library"/>
                    </StackPanel>
                </Button>

                <Button Classes="SidebarItem"
                        Command="{Binding GoHomeCommand}"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <PathIcon Data="{DynamicResource HistoryRegular}"
                                  Width="18"
                                  Height="18"/>
                        <TextBlock Text="History"/>
                    </StackPanel>
                </Button>

                <Separator Margin="0,12" Foreground="{DynamicResource Border}" Opacity="0.3"/>

                <Button Classes="SidebarItem"
                        Command="{Binding GoHomeCommand}"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <PathIcon Data="{DynamicResource SettingsRegular}"
                                  Width="18"
                                  Height="18"/>
                        <TextBlock Text="Settings"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
