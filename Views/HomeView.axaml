<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:WorkflowManager.ViewModels"
             xmlns:models="clr-namespace:WorkflowManager.Models"
             x:Class="WorkflowManager.Views.HomeView"
             x:DataType="viewModels:HomeViewModel">
    <Grid RowDefinitions="Auto,*">
        <!-- ACTION BANNER -->
        <Border Grid.Row="0"
                UseLayoutRounding="False"
                Background="{DynamicResource Color.Card}"
                BorderThickness="{DynamicResource Border.Thin.Bottom}"
                BorderBrush="{DynamicResource Color.Border}"
                Padding="{DynamicResource Spacing.Combo.Xl.Sm}">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="{DynamicResource Spacing.3Xl}">
                <!-- Search bar -->
                <Grid ColumnDefinitions="*, Auto" HorizontalAlignment="Stretch" ColumnSpacing="{DynamicResource Spacing.Sm}">
                    <TextBox HorizontalAlignment="Stretch" Text="{Binding SearchText}" Watermark="Search Workflows..."  />
                    
                    <Viewbox Grid.Column="1" Width="20" Height="20" VerticalAlignment="Center">
                        <Path StrokeThickness="{DynamicResource Border.Medium}"
                              Data="{DynamicResource SearchRegular}"
                              Stroke="{DynamicResource Color.Text.Secondary}"
                              Fill="Transparent"/>
                    </Viewbox>
                </Grid>


                <!-- Create workflow action -->
                <Button Grid.Column="1" Classes="ActionButton"
                        Command="{Binding GoCreateWorkflowCommand}"
                        CornerRadius="{DynamicResource Border.Radius.Sm}"
                        Padding="{DynamicResource Spacing.Combo.Lg.Sm}">
                    <StackPanel Orientation="Horizontal" Spacing="{DynamicResource Spacing.Md}">
                        <Viewbox Width="15" Height="15" VerticalAlignment="Center">
                            <Path StrokeThickness="{DynamicResource Border.Medium}"
                                  Data="{DynamicResource AddRegular}"
                                  Stroke="{DynamicResource Color.Text.OnAccent}"
                                  Fill="Transparent"/>
                        </Viewbox>
                        
                        <TextBlock Text="New Workflow" FontWeight="Bold" FontSize="18"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- WORKFLOW LIST -->
        <Border Grid.Row="1"
                Background="{DynamicResource Color.Background}"
                Padding="{DynamicResource Spacing.All.Xs}">

            <ScrollViewer>
                <ListBox
                    Background="Transparent"
                         ItemsSource="{Binding Workflows}"
                         SelectedItem="{Binding SelectedWorkflow}"
                         SelectionMode="Single">
    
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="models:Workflow">
                            <Border CornerRadius="{DynamicResource Border.Radius.Sm}"
                                    Padding="{DynamicResource Spacing.All.Sm}">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel VerticalAlignment="Center" Spacing="{DynamicResource Spacing.Xs}">
                                        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding LastStartup}" Opacity="0.7" FontSize="12"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" 
                                                Orientation="Horizontal" 
                                                Spacing="{DynamicResource Spacing.Xs}" 
                                                VerticalAlignment="Center">
                                        
                                        <Button x:CompileBindings="False"
                                                Command="{Binding DataContext.StartWorkflowCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="{DynamicResource Border.Radius.Md}">
                                            <StackPanel Orientation="Horizontal" Spacing="{DynamicResource Spacing.Xs}">
                                                <TextBlock Text="Start"/>
                                                <PathIcon Width="15" Height="15"
                                                          Data="{DynamicResource PlayRegular}"
                                                          Foreground="{DynamicResource Color.Success}"/>
                                            </StackPanel>
                                        </Button>

                                        <Button x:CompileBindings="False"
                                                Command="{Binding DataContext.EditWorkflowCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="{DynamicResource Border.Radius.Md}">
                                            <StackPanel Orientation="Horizontal" Spacing="{DynamicResource Spacing.Xs}">
                                                <TextBlock Text="Edit"/>
                                                <PathIcon Width="15" Height="15"
                                                          Data="{DynamicResource DocumentEditRegular}"
                                                          Foreground="{Binding $parent[Button].Foreground}"/>
                                            </StackPanel>
                                        </Button>

                                        <Button x:CompileBindings="False"
                                                Command="{Binding DataContext.DeleteWorkflowCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="{DynamicResource Border.Radius.Md}"
                                                Background="Transparent"
                                                BorderBrush="{DynamicResource Color.Error}"
                                                BorderThickness="1">
                                            <StackPanel Orientation="Horizontal" Spacing="{DynamicResource Spacing.Xs}">
                                                <TextBlock Text="Delete" Foreground="{DynamicResource Color.Error}"/>
                                                <PathIcon Width="15" Height="15"
                                                          Data="{DynamicResource DeleteRegular}"
                                                          Foreground="{DynamicResource Color.Error}"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.Styles>
                        <Style Selector="ListBoxItem:pointerover">
                            <Setter Property="Background" Value="{DynamicResource Color.Card}" />
                        </Style>

                        <Style Selector="ListBoxItem:selected">
                            <Setter Property="Background" Value="{DynamicResource Color.Primary}" />
                            <Setter Property="Foreground" Value="{DynamicResource Color.Text.OnAccent}" />
                            <Setter Property="Padding" Value="{DynamicResource Spacing.All.Xs}"/>
                        </Style>

                        <Style Selector="ListBoxItem:selected:pointerover">
                            <Setter Property="Background" Value="{DynamicResource Color.Primary}" />
                        </Style>
                    </ListBox.Styles>
                </ListBox>
            </ScrollViewer>
        </Border>

    </Grid>
</UserControl>
