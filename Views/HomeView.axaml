<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:WorkflowManager.ViewModels"
             xmlns:models="clr-namespace:WorkflowManager.Models"
             x:Class="WorkflowManager.Views.HomeView"
             x:DataType="viewModels:HomeViewModel">
    
    <Grid RowDefinitions="Auto,*"
          Margin="12">

        <!-- ACTION BANNER -->
        <Border Grid.Row="0"
                Background="#2a2a2a"
                CornerRadius="12"
                Padding="12"
                Margin="0,0,0,12">

            <Grid ColumnDefinitions="*,Auto">
                
                <!-- Left side (optional title / info) -->
                <TextBlock Text="Workflows"
                           FontSize="22"
                           VerticalAlignment="Center"/>

                <!-- Right side (actions) -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="10">
                    
                    <Button Command="{Binding StartWorkflowCommand}"
                            CornerRadius="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Start"/>
                            <PathIcon Width="15"
                                      Height="15"
                                      Data="{DynamicResource PlayRegular}"
                                      Foreground="{Binding $parent[Button].Foreground}"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding GoCreateWorkflowCommand}"
                            CornerRadius="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Create"/>
                            <PathIcon Width="15"
                                      Height="15"
                                      Data="{DynamicResource AddRegular}"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding EditWorkflowCommand}"
                            CornerRadius="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Edit"/>
                            <PathIcon Width="15"
                                      Height="15"
                                      Data="{DynamicResource DocumentEditRegular}"
                                      Foreground="{Binding $parent[Button].Foreground}"/>
                        </StackPanel>
                    </Button>

                    <Button
                            Command="{Binding DeleteWorkflowCommand}"
                            CornerRadius="8"
                            VerticalAlignment="Stretch">
                        <PathIcon Width="15"
                                  Height="15"
                                  Data="{DynamicResource DeleteRegular}"
                                  Foreground="{Binding $parent[Button].Foreground}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- WORKFLOW LIST -->
        <Border Grid.Row="1"
                Background="#1a1a1a"
                CornerRadius="12"
                Padding="8">

            <ScrollViewer>
                <ListBox
                    Background="Transparent"
                         ItemsSource="{Binding Workflows}"
                         SelectedItem="{Binding SelectedWorkflow}"
                         SelectionMode="Single">
    
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="models:Workflow">
                            <Border Background="#2e2e2e"
                                    CornerRadius="8"
                                    Padding="12"
                                    Margin="0,0,0,4">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Text="{Binding Title}" FontSize="18"/>
                                    <TextBlock Grid.Column="1" Text="{Binding LastStartup}" Opacity="0.7"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </ListBox.Styles>
                </ListBox>
            </ScrollViewer>
        </Border>

    </Grid>
</UserControl>
