<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:WorkflowManager.ViewModels"
             x:Class="WorkflowManager.Views.CreateWorkflowView"
             x:DataType="viewModels:CreateWorkflowViewModel">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20" MaxWidth="600">
            <TextBlock Text="Create New Workflow" FontSize="24" FontWeight="SemiBold" />

            <StackPanel Spacing="8">
                <TextBlock Text="Workflow Information" FontWeight="Bold" Foreground="{DynamicResource SystemAccentColor}"/>
                <Border Padding="15" BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Workflow Title" FontSize="12"/>
                        <TextBox Text="{Binding WorkflowTitle}" Watermark="e.g. Daily Data Backup" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock Text="Add New Process" FontWeight="Bold" Foreground="{DynamicResource SystemAccentColor}"/>
                <Border Padding="15" BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1" CornerRadius="4">
                    <StackPanel Spacing="10">
                        <TextBox Text="{Binding ProcessTitle}" Watermark="Process Name (e.g. Sync Files)" />
                        <TextBox Text="{Binding ProcessDirectory}" Watermark="Directory Path" />
                        <TextBox Text="{Binding ProcessCommand}" Watermark="Command / Script" />
                        
                        <Button Content="Add Process" 
                                Command="{Binding AddProcessCommand}" 
                                HorizontalAlignment="Right"
                                HotKey="Enter"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock Text="Current Processes Queue" FontWeight="Bold" />
                <ItemsControl ItemsSource="{Binding WorkflowProcesses}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#15000000" Margin="0,0,0,5" Padding="12" CornerRadius="4">
                                <Grid ColumnDefinitions="Auto, *, Auto">
                                    <PathIcon Data="{StaticResource ChevronRightRegular}" Width="12" Margin="0,0,10,0"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Command}" FontSize="11" Foreground="Gray"/>
                                    </StackPanel>
                                    </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <Separator Margin="0,10" />

            <Button Content="Finalize Workflow" 
                    Command="{Binding CreateWorkflowCommand}"
                    Background="{DynamicResource SystemAccentColor}"
                    Foreground="White"
                    Height="45"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>