<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="TextBox">
        <Setter Property="Background" Value="{DynamicResource Color.Card}"/>
        <Setter Property="Foreground" Value="{DynamicResource Color.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Color.Border}"/>
        <Setter Property="BorderThickness" Value="{DynamicResource Border.Thin.All}"/>
        <Setter Property="Padding" Value="18, 12"/>
        <Setter Property="CornerRadius" Value="{DynamicResource Border.Radius.Sm}"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <!-- Watermark styling -->
    <Style Selector="TextBox:watermark">
        <Setter Property="Foreground" Value="{DynamicResource Color.Text.Secondary}"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="Button.ActionButton">
        <Setter Property="Background" Value="{DynamicResource Color.Primary}"/>
        <Setter Property="Foreground" Value="{DynamicResource Color.Text.OnAccent}"/>
    </Style>
    
    <Style Selector="Button.ActionButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource Color.Primary.Subtle}"/>
        <Setter Property="Foreground" Value="{DynamicResource Color.Text.OnAccent}"/>
    </Style>

    <Style Selector="Button.ActionButton:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource Color.Primary}"/>
        <Setter Property="Foreground" Value="{DynamicResource Color.Text.OnAccent}"/>
    </Style>
    
    <!-- Text colors -->
    
    <Style Selector="TextBlock.PrimaryText">
        <Setter Property="Foreground" Value="{DynamicResource Color.Text.Primary}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    
    <Style Selector="TextBlock.SecondaryText">
        <Setter Property="Foreground" Value="{DynamicResource Color.Text.Secondary}" />
    </Style>
    
    <Style Selector="TextBlock.OnAccentText">
        <Setter Property="Foreground" Value="{DynamicResource Color.Text.OnAccent}" />
    </Style>
    
    <!-- Text sizing-->
    
    <Style Selector="TextBlock.HeaderLg">
        <Setter Property="FontSize" Value="22"></Setter>
    </Style>
    
    <Style Selector="TextBlock.HeaderMd">
        <Setter Property="FontSize" Value="20"></Setter>
    </Style>

    <Style Selector="TextBlock.ParagraphMd">
        <Setter Property="FontSize" Value="16"></Setter>
    </Style>
</Styles>